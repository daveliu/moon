<div class="comments">
	<%= render :partial => 'comments/comment', :collection => commentable.comments %>    
	<div id="comment_form" class="comment" style="border-bottom: 0pt none;">
		<div class="float_liner">                                             
		  <% form_for :comment,
		              :url => comments_path(ActiveSupport::Inflector.underscore(commentable.class), commentable.id),
		              :html => {:id => "comment_form", :multipart => true} do |c| %>
				<%= image_tag current_user.avatar.url(:thumb), :width => 48, :height => 48, :class => "avatar" %>  
				<div class="indented">
					<div class="comment_header">
						<h3>
							<strong>Leave a commentâ€¦</strong>
						</h3>
				</div>
				<p id="edit_body">   
					<textarea style="height: 150px; width: 807px;" rows="20" name="comment[body]" cols="40"></textarea>
				</p>
				<%= render :partial => "assets/form", :locals => {:attachable => Comment.new, :name => "comment"} %>
				<p class="submit">                                         
					<span id="buttons">
						<input type="submit" value="Add this Comment" name="commit"/>
					</span>
				</p>	
		  <% end -%>
		</div>
	</div>
</div>