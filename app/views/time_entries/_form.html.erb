<td class="date"> 
	<%= date_select :time_entry, :done_date %>
</td>
<td class="person">                      
	<%= select :time_entry, :receiver_id, User.all.collect {|u|[u.login, u.id]}, :selected => current_user.id %>
</td>
<td class="hours">                    
	<%= text_field :time_entry, :hours, :size => "4" %>
</td>
<td class="desc">
	<%= text_field :time_entry, :description, :size => "35" %>
</td>
<td class="form action">                      
	<div class="spinner_target">
		<div class="hide_while_busy">
			<input type="submit" value="Add to log" name="commit"/>
		</div>
	</div>
</td>
